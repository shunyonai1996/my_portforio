<% if @users.present? %>
  <% @users.each do |user| %>
    <table>
      <tbody>
        <tr>
          <td>
            <a href="/users/<%= user.id %>"><%= user.name %></a>
          </td>
          <td>フォロー中 <%= user.followings.count %>人</td>
          <td>フォロワー <%= user.followers.count %>人</td>
          <td>投稿数 <%= user.microposts.count %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>