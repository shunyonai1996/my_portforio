<li id="micropost-<%= micropost.id %>">
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="occupation"><%= micropost.occupation %></span>
  <span class="job"><%= micropost.job %></span>
  <span class="time"><%= micropost.time.strftime('%H:%M') %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp"><%= time_ago_in_words(micropost.created_at) %>前
    <% if current_user?(micropost.user) %>
    <%= link_to "投稿を削除", micropost, method: :delete, data: { confirm: "本当に削除しますか？"} %>
    <% end %>
  </span>
</li>