<h2>職業を検索<span class="material-icons md-36">content_paste_search</span></h2>
<div class="row">
  <%= form_with url: search_microposts_path, method: :get, id: 'example_form', class: 'col-xs-11 col-sm-11 col-lg-8 example-form',  local: true do |f| %>
    <%= f.select :id, nil, {prompt: "①業界を選択"}, {'v-model': 'selectedIndust', '@change': 'getOccupations(selectedIndust)'} do %>
      <option v-for="industry in industries" :key="industry.name" :value="industry.id">
        {{industry.name}}
      </option>
    <% end %>

    <%= f.select :id, nil, {prompt: "②職種を選択"} do %>
      <option v-for="occupation in occupations" :key="occupation.name" :value="occupation.id">
        {{occupation.name}}
      </option>
    <% end %>

    <%= f.submit '③検索' %>
  <% end %>
</div>